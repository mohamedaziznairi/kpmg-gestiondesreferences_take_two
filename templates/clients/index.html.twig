{% extends 'base.html.twig' %}

{% block title %}Clients index{% endblock %}

{% block body %}
    <h1>Clients index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idclient</th>
                <th>Companyname</th>
                <th>Addeddate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.idclient }}</td>
                <td>{{ client.companyname }}</td>
                <td>{{ client.addeddate ? client.addeddate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_clients_show', {'idclient': client.idclient}) }}">show</a>
                    <a href="{{ path('app_clients_edit', {'idclient': client.idclient}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_clients_new') }}">Create new</a>
{% endblock %}
