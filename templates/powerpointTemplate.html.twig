{# templates/powerpointTemplate.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PowerPoint Template - {{ credential.projectTitle }}</title>
</head>
<body>
    <h1>{{ credential.projectTitle }}</h1>
    <p><strong>Country:</strong> {{ credential.country }}</p>
    <p><strong>Description:</strong></p>
    <p>{{ credential.description }}</p>
    <p><strong>Client:</strong> {{ credential.client.companyName }}</p>

    <h2>Objectives</h2>
    <ul>
        {% for objective in credential.objectives %}
            <li>{{ objective.description }}</li>
        {% endfor %}
    </ul>

    <h2>Workstreams</h2>
    <ul>
        {% for workstream in credential.workstreams %}
            <li>{{ workstream.name }}</li>
        {% endfor %}
    </ul>
</body>
</html>
